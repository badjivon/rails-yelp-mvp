<h1 class="text-center">RESTAURANTS</h1>


<div class="container d-flex"><% @restaurants.each do |restaurant| %>
  <div class="card m-1">
    <h3 class="card-title"><%= restaurant.name %></h3>
    <p class="card-text"><%= restaurant.address %> - <%= restaurant.phone_number %></p>
    <p clas="card-text"><%= restaurant.category %></p>
  </div>
<% end %>
</div>
